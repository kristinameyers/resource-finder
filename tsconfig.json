{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@sb211/hooks/*": ["apps/mobile/src/hooks/*"],
      "@sb211/lib/*": ["packages/lib/src/*"],
      "@sb211/components/*": ["packages/components/src/*"],
      "@sb211/shared-schema": ["packages/shared-schema/src/index.ts"],
      "@sb211/assets/*": ["apps/mobile/assets/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "scripts/**/*",
    "tools/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "**/dist",
    "**/.expo",
    "**/.next"
  ]
}
