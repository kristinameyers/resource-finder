{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "paths": {
      "@/*": [
        "apps/client/src/*"
      ],
      "@shared/*": [
        "packages/shared-schema/src/*"
      ],
      "@assets/*": [
        "apps/mobile/assets/*"
      ],
      "@sb211/hooks/*": [
        "packages/hooks/src/*"
      ],
      "@sb211/lib/*": [
        "packages/lib/src/*"
      ],
      "@sb211/components/*": [
        "packages/components/src/*"
      ],
      "@sb211/shared-schema": [
        "packages/shared-schema/src/index.ts"
      ],
      "@sb211/assets/*": [
        "apps/mobile/assets/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "scripts/**/*",
    "tools/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client", // if youâ€™ve migrated client into apps/client
    "**/dist",
    "**/.expo",
    "**/.next"
  ]
}